---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
  <div class="section">
    <h2 class="section-heading">Contact</h2>

    <form
      class="space-y-6"
      action="https://formspree.io/f/your-form-id"
      method="POST"
    >
      <!-- Name -->
      <div class="flex flex-col">
        <label for="name" class="mb-2 text-sm font-medium text-black font-dm">
          Name
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Your name"
          class="font-dm px-3 py-2 border border-black text-black placeholder-black focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition"
        />
      </div>

      <!-- Email -->
      <div class="flex flex-col">
        <label for="email" class="mb-2 text-sm font-medium text-black font-dm">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="you@example.com"
          class="font-dm px-3 py-2 border border-black text-black placeholder-black focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition"
        />
      </div>

      <!-- Message -->
      <div class="flex flex-col">
        <label
          for="message"
          class="mb-2 text-sm font-medium text-black font-dm"
        >
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          placeholder="Your message..."
          class="font-dm px-3 py-2 border border-black text-black placeholder-black focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition resize-none"
        ></textarea>
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="font-dm bg-black text-white px-6 py-2 hover:bg-gray-900 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-black transition"
      >
        Send Message
      </button>
    </form>
  </div>
</Layout>
