---
import Layout from "../layouts/Layout.astro";
import ProjectItem from "../components/ProjectItem.astro";

const projects = [
  {
    name: "Streamlytics",
    dateAward:
      "1st Place Best Event-Driven System @ Global Backend Hackathon · Mar. 2025",
    description:
      "A real-time analytics platform for streaming sensor data using event-driven microservices to process millions of events per second with near-zero latency.",
    tech: "Java, Spring Boot, Apache Kafka, PostgreSQL, Docker, Kubernetes, AWS",
    link: "",
  },
  {
    name: "OrderFlow",
    dateAward:
      "2nd Place Microservices Excellence @ Cloud Native Hackathon · Apr. 2025",
